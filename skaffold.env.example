# Database Secrets
DB_PASSWORD=your_postgres_password_here
MSSQL_SA_PASSWORD=your_mssql_password_here

# Database Configuration
DB_NAME=accountsdb
DB_USER=postgres

# MS SQL Server Configuration
DB_DATABASE=RelibankDB
DB_USERNAME=SA

# Kafka Configuration
KAFKA_PASSWORD=your_kafka_password_here
KAFKA_PORT=9092
KAFKA_INTERNAL_PORT=29092
KAFKA_EXTERNAL_PORT=9092

# JWT and Encryption
JWT_SECRET_KEY=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# External API Keys
NOTIFICATION_API_KEY=your_notification_api_key_here
PAYMENT_GATEWAY_SECRET=your_payment_gateway_secret_here

# New Relic (if using)
NEW_RELIC_LICENSE_KEY=your_newrelic_license_key_here

# Chaos Mesh Configuration
CHAOS_MESH_VERSION=2.6.2
CHAOS_MESH_NAMESPACE=chaos-mesh

# Storage Configuration (local vs AKS)
# For local development (minikube):
STORAGE_CLASS=standard
# For AKS deployment:
# STORAGE_CLASS=azure-disk

# Example values - CHANGE THESE IN PRODUCTION!
# DB_PASSWORD=dev_postgres_123
# MSSQL_SA_PASSWORD=Dev_SqlServer_456
# JWT_SECRET_KEY=your-super-secret-jwt-key-min-32-chars
# ENCRYPTION_KEY=your-32-char-encryption-key-here
